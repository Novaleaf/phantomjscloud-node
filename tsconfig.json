{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": false,
    "inlineSourceMap": false,
    "declaration": true,
    "jsx": "react",
    "newLine": "LF",
    "pretty": true,
    "stripInternal": true,
    "diagnostics": true,
    "target": "es5",
    "watch": false,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./lib"

  },
  "exclude": [
    "node_modules",
    "lib",
    "typings/browser.d.ts",
    "typings/browser",
    "obj",
    "bin"
  ]
}