{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": false,
    "inlineSourceMap": false,
    "declaration": true,
    "jsx": "react",
    "newLine": "LF",
    "pretty": true,
    "stripInternal": true,
    "diagnostics": true,
    "target": "es5",
    "watch": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": true
    
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/graveyard",
    "typings"
  ]
}