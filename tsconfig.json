// * novaleaf tsconfig for inheritors of xlib v1
{
  "compileOnSave": true,
  "references": [
    {
      "path": "../xlib",
    }
  ],
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": false,
    "inlineSourceMap": false,
    "composite": true, // ! IMPORTANT this seems to screw up tsc complation, considder toggling.
    "declaration": true,
    "declarationMap": true,
    "strict": false, /////////  change for vNext    
    "noEmitOnError": false,
    "jsx": "react",
    "newLine": "LF",
    "pretty": true,
    "stripInternal": true,
    //"diagnostics": true, // verbose debug output of tsc build
    //"listFiles": true, // verbose debug output of tsc build
    //"listEmittedFiles": true, // verbose debug output of tsc build
    "target": "es6",
    "watch": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false, /////////  change for vNext
    "noImplicitAny": false, /////////  change for vNext
    "noImplicitThis": false, /////////  change for vNext
    "noUnusedLocals": false, /////////  change for vNext
    "noUnusedParameters": false,
    "strictNullChecks": false, /////////  change for vNext
    "suppressExcessPropertyErrors": true, /////////  change for vNext
    "suppressImplicitAnyIndexErrors": true, /////////  change for vNext
    "noStrictGenericChecks": true, /////////  change for vNext
    "skipLibCheck": false,
    "alwaysStrict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": true,
    //"baseUrl": null,
    //"charset": null,
    "checkJs": false,
    "downlevelIteration": true,
    "emitBOM": false,
    "emitDeclarationOnly": false,
    "disableSizeLimit": false,
    "emitDecoratorMetadata": false, /////////  change for vNext
    "esModuleInterop": false, /////////  change for vNext
    "experimentalDecorators": false, /////////  change for vNext
    "importHelpers": false, // tsc bug: even though tslib is in node_modules, tsc only sees it if at root level (not in a submodule)
    "keyofStringsOnly": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false, /////////  change for vNext   
    "outDir": "dist",
    "rootDir": "src",
  },
  // "typeAcquisition": { //not enabling to force explicit usage of new types
  //   "enable": true,
  // },
  // "include": [
  //   "./src/**/*.ts",
  //   "./src/_internal/**/*.ts",
  // ],
  "exclude": [
    "node_modules",
    "src/_graveyard",
    "src/_to_refactor",
    "dist",
  ]
}